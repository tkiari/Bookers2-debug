
<% if @range == "User" %>
  <h2>Books search for User name</h2>
 <% else %>
  <h2>Books search for User book</h2>
<% end %>


<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Introduction</th>
          <th colspan="3"></th>
        </tr>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:"50x50" %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>